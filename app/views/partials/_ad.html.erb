<% if anuncio.imagen.attached? %>
  <%= link_to anuncio_link_url(anuncio), target: '_blank' do %>
    <% if index == 0 %>
      <%= image_tag anuncio.imagen,
                    class: 'no-drag-select w-100',
                    alt: ""
      %>
    <% else %>
      <%= image_tag anuncio.imagen,
                    class: 'no-drag-select w-100 d-none d-lg-block',
                    alt: ""
      %>
    <% end %>
  <% end %>
<% end %>
