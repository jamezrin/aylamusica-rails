<div class="m-0 d-flex min-vh-100 justify-content-center align-items-center flex-column bg-light-dark">
  <div class="login-form text-center">
    <h1><%= t 'acciones.iniciar_sesion' %></h1>
    <p class="text-muted"><%= t 'nota_iniciar_sesion' %></p>

    <%= image_tag 'undraw_login.svg', class: 'w-25 mt-2 mb-5', alt: "" %>

    <%= form_with url: admin_url, local: true do |f| %>
      <div class="form-group row offset-3 col-6">
        <%= f.label :contrasena, class: 'col-12' %>
        <%= f.password_field :contrasena, class: 'form-control' %>
      </div>

      <%= f.submit t('acciones.iniciar_sesion'), class: 'btn btn-primary' %>
    <% end %>

    <%= render 'partials/alerts' %>
  </div>
</div>