<%= render "partials/publicidad" do %>
  <div class="container justify-content-center">
    <h1 class="text-center">
      <% if params[:q].empty? %>
        <%= t 'todas_las_canciones', busqueda: params[:q] %>
      <% else %>
        <%= t 'resultados_busqueda', busqueda: params[:q] %>
      <% end %>
    </h1>


    <% if @canciones.empty? %>
      <h2 class="text-center text-muted"><%= t 'ninguna_cancion' %></h2>
    <% else %>
      <ul class="list-group">
        <% @canciones.each do |cancion| %>
          <li class="list-group-item my-2 rounded shadow-sm">
            <%= link_to cancion_url(cancion) do %>
              <div class="row">
                <div class="col">
                  <% if cancion.imagen.attached? %>
                    <%= image_tag cancion.imagen, class: 'no-drag-select', style: 'max-height: 8rem;' %>
                  <% else %>
                    <%= image_tag 'music_note_disk_icon.png', class: 'no-drag-select', style: 'max-height: 8rem;' %>
                  <% end %>
                </div>

                <div class="col-10">
                  <div class="mt-3">
                    <h5 class="card-title"><%= cancion.titulo %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= cancion.artista %></h6>
                  </div>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
<% end %>
