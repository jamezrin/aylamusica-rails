<div class="row no-gutters bg-light-dark">
  <div class="col-12 col-lg-1">
    <div>
      <img src="https://mir-s3-cdn-cf.behance.net/project_modules/max_1200/4a66f333332919.56a84344447ec.jpg" class="w-100">
      <img src="https://mir-s3-cdn-cf.behance.net/project_modules/max_1200/4a66f333332919.56a84344447ec.jpg" class="w-100">
      <img src="https://mir-s3-cdn-cf.behance.net/project_modules/max_1200/4a66f333332919.56a84344447ec.jpg" class="w-100">
      <img src="https://mir-s3-cdn-cf.behance.net/project_modules/max_1200/4a66f333332919.56a84344447ec.jpg" class="w-100">
    </div>
  </div>
  <div class="col-12 col-lg mt-5">
    <div class="container justify-content-center text-center">
      <div>
        <h1><%= t("titulo_buscar_cancion") %></h1>

        <%= form_with url: buscar_url, local: true, method: :get do |f| %>
          <div class="form-group">
            <%= f.text_field :q, class: 'form-control offset-3 col-6' %>
          </div>
          <%= f.submit t('acciones.buscar'), name: nil, class: 'btn btn-primary' %>
        <% end %>
      </div>

      <img src="<%= asset_url("undraw_music_disc.svg") %>" class="w-50 mt-5 no-drag-select">

      <div class="mt-5">
        <h2><%= t('titulo_canciones_populares') %></h2>
        <ul class="list-unstyled d-flex flex-row justify-content-center flex-wrap">
        <% @canciones.each do |cancion| %>
            <li>
              <a href="<%= cancion_path(cancion) %>" class="text-decoration-none">
                <div class="m-3 p-4 bg-white shadow-sm rounded-lg cancion-popular">
                  <% if cancion.imagen.attached? %>
                  <%= image_tag cancion.imagen, class: 'cancion-popular__imagen no-drag-select' %>
                  <% else %>
                  <%= image_tag 'music_note_disk_icon.png', class: 'cancion-popular__imagen-defecto no-drag-select' %>
                  <% end %>

                  <div class="mt-3">
                    <h5 class="card-title"><%= cancion.titulo %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= cancion.artista %></h6>
                  </div>
                </div>
              </a>
            </li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-12 col-lg-1 px-0 d-none d-lg-flex">
    <div>
      <img src="https://mir-s3-cdn-cf.behance.net/project_modules/max_1200/4a66f333332919.56a84344447ec.jpg" class="w-100">
      <img src="https://mir-s3-cdn-cf.behance.net/project_modules/max_1200/4a66f333332919.56a84344447ec.jpg" class="w-100">
      <img src="https://mir-s3-cdn-cf.behance.net/project_modules/max_1200/4a66f333332919.56a84344447ec.jpg" class="w-100">
      <img src="https://mir-s3-cdn-cf.behance.net/project_modules/max_1200/4a66f333332919.56a84344447ec.jpg" class="w-100">
    </div>
  </div>
</div>