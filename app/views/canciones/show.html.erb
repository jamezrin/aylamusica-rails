<div class="row no-gutters bg-light-dark">
  <div class="col-12 col-lg-1 bg-dark">
    <aside role="none">
      <img src="https://mir-s3-cdn-cf.behance.net/project_modules/max_1200/4a66f333332919.56a84344447ec.jpg" class="w-100">
      <img src="https://mir-s3-cdn-cf.behance.net/project_modules/max_1200/4a66f333332919.56a84344447ec.jpg" class="w-100 d-none d-lg-block">
      <img src="https://mir-s3-cdn-cf.behance.net/project_modules/max_1200/4a66f333332919.56a84344447ec.jpg" class="w-100 d-none d-lg-block">
      <img src="https://mir-s3-cdn-cf.behance.net/project_modules/max_1200/4a66f333332919.56a84344447ec.jpg" class="w-100 d-none d-lg-block">
    </aside>
  </div>

  <div class="col-12 col-lg-10 mt-5">
    <div class="container cancion">
      <%= form_with(url: cancion_comentar_url(@cancion), local: true) do |f| %>
        <div class="row">
          <div class="col-12 col-xl-8">
            <div class="row">
              <div class="col-3">
                <% if @cancion.imagen.attached? %>
                  <%= image_tag @cancion.imagen, class: 'no-drag-select w-100' %>
                <% else %>
                  <%= image_tag 'music_note_disk_icon.png', class: 'no-drag-select w-100' %>
                <% end %>
              </div>
              <div class="col">
                <h1><%= @cancion.titulo %></h1>
                <h2><%= @cancion.artista %></h2>
                <p>
                  <i class="fas fa-eye"></i>
                  <%= t 'visitas_cancion', visitas: @cancion.visitas %>
                </p>
              </div>
            </div>

            <ul class="list-unstyled pl-0">
              <% @cancion.parrafos.each do |parrafo| %>
                <li class="parrafo my-3">
                  <input type="radio" name="parrafo_pos" id="parrafo-<%= parrafo.posicion %>" value="<%= parrafo.posicion %>" class="d-none" required <%= "checked" if params[:parrafo_pos] == parrafo.posicion.to_s %>>
                  <label for="parrafo-<%= parrafo.posicion %>"><%= parrafo.texto %></label>
                </li>
              <% end %>
            </ul>
          </div>

          <div class="col-12 col-xl-4 mt-5">
            <div class="sticky-top pt-5">
              <h3><%= t('titulo_crear_comentario') %></h3>

              <% if flash[:notice] %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                  <strong><%= notice %></strong>
                  <button type="button" class="close" data-dismiss="alert" aria-label="<%= t 'acciones.cerrar' %>">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
              <% end %>

              <div class="form-group">
                <%= f.text_area :texto, class: 'form-control', required: true %>
                <%= f.submit t('acciones.crear_comentario'), class: 'form-control' %>
              </div>

              <h3><%= t('titulo_comentarios') %></h3>
              <div class="mt-4" id="seccion-comentarios">
                <ul class="list-unstyled pl-0 list-group overflow-auto" id="lista-comentarios"></ul>
                <div id="lista-sin-comentarios" class="justify-content-center text-center">
                  <%= image_tag'undraw_chatting.svg', class: 'no-drag-select w-100' %>
                  <p class="p-3"><%= t 'ningun_comentario' %></p>
                </div>
              </div>

              <noscript>
                <%= f.submit t('acciones.ver_comentarios'), class: 'form-control' %>
              </noscript>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
  <div class="col-12 col-lg-1 bg-dark">
    <aside role="none">
      <img src="https://mir-s3-cdn-cf.behance.net/project_modules/max_1200/4a66f333332919.56a84344447ec.jpg" class="w-100">
      <img src="https://mir-s3-cdn-cf.behance.net/project_modules/max_1200/4a66f333332919.56a84344447ec.jpg" class="w-100 d-none d-lg-block">
      <img src="https://mir-s3-cdn-cf.behance.net/project_modules/max_1200/4a66f333332919.56a84344447ec.jpg" class="w-100 d-none d-lg-block">
      <img src="https://mir-s3-cdn-cf.behance.net/project_modules/max_1200/4a66f333332919.56a84344447ec.jpg" class="w-100 d-none d-lg-block">
    </aside>
  </div>
</div>
