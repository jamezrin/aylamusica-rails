<div class="bg-light-dark min-vh-100">
  <div class="container pt-5" id="crear-cancion">
    <h1><%= t('titulo_crear_cancion') %></h1>

    <%= form_with(model: @cancion, local: true) do |f| %>
      <p class="form-group">
        <%= f.label :titulo %><br>
        <%= f.text_field :titulo, class: 'form-control' %>
      </p>

      <p class="form-group">
        <%= f.label :artista %><br>
        <%= f.text_field :artista, class: 'form-control' %>
      </p>

      <p class="form-group">
        <%= f.label :imagen %><br>
        <%= f.file_field :imagen, class: 'form-control-file' %>
      </p>

      <p class="form-group">
        <%= f.label :letra %><br>
        <%= f.text_area :letra, class: 'form-control', rows: 20 %>
      </p>

      <p class="form-group">
        <%= f.submit class: 'btn btn-primary' %>
      </p>
    <% end %>
  </div>

</div>

